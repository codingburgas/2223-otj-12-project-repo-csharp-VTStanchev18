@model User

<h1>Edit User</h1>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName">Собствено име:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName">Фамилно име:</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Age">Години:</label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Имейл:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Парола:</label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RoleId">Роля:</label>
        <select asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles, "Id", "Name", Model.RoleId))" class="form-control">
            <option value="">-- Избери роля --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Запази</button>
</form>
